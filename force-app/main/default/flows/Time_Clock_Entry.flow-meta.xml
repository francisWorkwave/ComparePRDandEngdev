        <name>forEntryType</name>
        <dataType>String</dataType>
        <expression>IF(Contains({!Time_Clock_Choice},&quot;Work&quot;),&quot;Work&quot;,
IF(Contains({!Time_Clock_Choice},&quot;Lunch&quot;),&quot;Lunch&quot;,
