    <formulas>
        <name>forPunchDefaultValue</name>
        <dataType>String</dataType>
        <expression>IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Work&quot;) &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = FALSE,&quot;StartBreak&quot;,
IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Break&quot;) &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = FALSE,&quot;EndBreak&quot;,
IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Break&quot;) &amp;&amp; {!varBreakCount} &lt;= 1 &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = TRUE,&quot;StartLunch&quot;,
IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Lunch&quot;) &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = FALSE,&quot;EndLunch&quot;,
IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Lunch&quot;) &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = TRUE,&quot;StartBreak&quot;,
IF(ISPICKVAL({!Last_Time_Entry.Entry_Type__c},&quot;Break&quot;) &amp;&amp; {!varBreakCount}  &gt;= 1 &amp;&amp; {!Last_Time_Entry.Entry_Complete__c} = TRUE,&quot;EndWork&quot;,

&quot;StartWork&quot;
))))))</expression>
    </formulas>
    <formulas>
