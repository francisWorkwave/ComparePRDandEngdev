            </conditions>
            <connector>
                <targetReference>Update_Finance_Status</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
        <rules>
            <name>Is_Rejected</name>
            <conditionLogic>(1 AND 2) OR (3 AND 4)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Finance_Contractor_Adjustment_Status__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Finance_Contractor_Adjustment_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Rejected</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Finance_Client_Consumer_ADJ_Status__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Finance_Client_Consumer_ADJ_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Rejected</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>UpdateRecordRejected</targetReference>
            </connector>
            <label>Rejected</label>
        </rules>
        <rules>
            <name>Is_Processed</name>
            <conditionLogic>(1 AND 2 AND 6)  OR (1 AND 2 AND 4) OR (3 AND 4 AND 5) OR (3 AND 4 AND 2)</conditionLogic>
            <conditions>
