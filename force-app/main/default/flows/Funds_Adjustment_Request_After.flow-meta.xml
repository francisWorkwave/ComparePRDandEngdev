    <formulas>
        <description>resource for updating the Finance contractor status based on various criteria</description>
        <name>forContractorStatus</name>
        <dataType>String</dataType>
        <expression>IF(
{!$Record.RecordType.DeveloperName} = &apos;Contractor_Adjustment&apos;, &apos;New&apos;,
IF(
AND( 
ISPICKVAL({!$Record.Adjust_Contractor_Funds__c}, &apos;Yes&apos;),
OR(
{!$Record.RecordType.DeveloperName} = &apos;Client_Adjustment&apos;, 
{!$Record.RecordType.DeveloperName} = &apos;Consumer_Adjustment&apos;)
), 
&apos;New&apos;, &apos;&apos;)
)</expression>
    </formulas>
    <formulas>
        <description>Updates the Finance Customer Status field with a value of &quot;New&quot; based on criteria</description>
        <name>forCustomerStatus</name>
        <dataType>String</dataType>
        <expression>IF(
OR(
{!$Record.RecordType.DeveloperName} = &apos;Client_Adjustment&apos;,
{!$Record.RecordType.DeveloperName} = &apos;Consumer_Adjustment&apos;
), 
&apos;New&apos;,
IF(
AND(
{!$Record.RecordType.DeveloperName} = &apos;Contractor_Adjustment&apos;,
ISPICKVAL({!$Record.Client_Consumer_Charge_Adjustment_Req__c}, &apos;Yes&apos;)
),
&apos;New&apos;, &apos;&apos;)
)</expression>
    </formulas>
