<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount_of_Request__c</field>
        <field>Consumer_Account__c</field>
        <field>Contractor_Account__c</field>
        <field>Issue_To__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Initial Submission Requests Equal to or greater than 500.00, Resubmissions skip this step - VP or Director role Auto Approve</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Director_VP_Submission__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>greaterOrEqual</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.TEI_Submission__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Approval_Exception__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval_Step</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Leadership</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Approval_Exception__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Leadership Approval</label>
        <name>Leadership_Approval_Step</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Approval_Exception__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval Step Exempt</label>
        <name>Approval_Step_Exempt</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>SLC Approval Process - All Requests Greater than $500 - Manager with Delegate Approval, Final Approval by Leadership Queue - all requests from users with a manager that equals VP or Director - skip Leadership Queue Approval</description>
    <emailTemplate>Ops_Internal_Email_Templates/Comp_Approval_Request_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>Comp_Request__c.TEI_Submission__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Comp_Request__c.Amount_of_Request__c</field>
            <operation>greaterOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>Comp_Request__c.Director_VP_Submission__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Comp_Request__c.Approval_Exception__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Comp_Request__c.Approval_Exception__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Comp_Request_Approval_Notification_x1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Update_Finance_Ready</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Comp_Request_Rejection_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Update_Ops_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Update_Pending_x1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Submission_Type</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SLC Submission &gt; $500 Exempt Step</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Status_Update_Pending_x2</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
