<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount_of_Request__c</field>
        <field>Consumer_Account__c</field>
        <field>Contractor_Account__c</field>
        <field>Issue_To__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Initial Submission Requests, Resubmissions Skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>lessThan</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.TEI_Submission__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Tier 1</label>
        <name>Tier_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Initial Submission Requests equal to or greater than 100  AND equal to or less than 500.00. Resubmissions Skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>greaterOrEqual</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>lessThan</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.TEI_Submission__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Tier 2</label>
        <name>Tier_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Leadership</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Initial Submission Requests Equal to or greater than 500.01, Resubmissions skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>greaterOrEqual</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.TEI_Submission__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Tier 3</label>
        <name>Tier_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>TEI Approval Process - All requests - approval by Manager and Delegate
All TEI submissions go through this approval process</description>
    <emailTemplate>Ops_Internal_Email_Templates/Comp_Approval_Request_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Comp_Request__c.TEI_Submission__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Comp_Request__c.Amount_of_Request__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Comp_Request_Approval_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Update_Finance_Ready</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Comp_Request_Rejection_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Update_Ops_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Update_Pending_x1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Submission_Type</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>TEI Submission</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Status_Update_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
