<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount_of_Request__c</field>
        <field>Submission_Type__c</field>
        <field>Comp_Description__c</field>
        <field>Comp_Request_Reason__c</field>
        <field>Contractor_Account__c</field>
        <field>Customer_Client_Account_Lookup__c</field>
        <field>Issue_To__c</field>
        <field>Job_ID__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Initial Submission Requests, Resubmissions Skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Tier 1</label>
        <name>Tier_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>aaron.lewis@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>arynne.mehl@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jessika.jentzsch@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>john.haddon@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>patty.cazer@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>yoed.santana@taskeasy.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Initial Submission Requests equal to or greater than 75.01 AND equal to or less than 300.00.  Resubmissions Skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>greaterThan</operation>
                <value>75</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>lessOrEqual</operation>
                <value>300</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Tier 2</label>
        <name>Tier_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>aaron.lewis@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>amy.ames@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jenica.stehlin@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jesse.harward@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>matt.cazer@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>yoed.santana@taskeasy.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Initial Submission Requests Equal to or greater than 300.01, Resubmissions skip this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Comp_Request__c.Amount_of_Request__c</field>
                <operation>greaterThan</operation>
                <value>300</value>
            </criteriaItems>
            <criteriaItems>
                <field>Comp_Request__c.Submission_Type__c</field>
                <operation>equals</operation>
                <value>Initial Submission</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Tier 3</label>
        <name>Tier_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hikmeta.mulalic@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>valeria.torres@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>william.mejia@taskeasy.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Initial Submission Requests Final Approval by Finance, Resubmissions skip all previous steps for Approval By Finance</description>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Ops_Internal_Email_Templates/Comp_Approval_Request_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Comp_Request__c.Amount_of_Request__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Amount</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Date_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Processed_By_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Reason_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_Processed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Date_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Processed_By_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Needs_Attention</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Update_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Comp Request Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_Update_Needs_Attention</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
