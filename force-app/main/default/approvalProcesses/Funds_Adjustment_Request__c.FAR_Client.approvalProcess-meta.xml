<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Reason_for_Adjustment__c</field>
        <field>Adjustment_Explanation__c</field>
        <field>Adjustment_Amount__c</field>
        <field>Amount__c</field>
        <field>Submission_Date__c</field>
        <field>Contractor_Name__c</field>
        <field>Client_Consumer_Name__c</field>
        <field>Customer_Type__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>arynne.mehl@taskeasy.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jenica.stehlin@taskeasy.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>All adjustment requests that are equal to or greater than $100 should enter this step for approval</description>
        <entryCriteria>
            <criteriaItems>
                <field>Funds_Adjustment_Request__c.Amount__c</field>
                <operation>greaterOrEqual</operation>
                <value>100</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Amount &gt; 100</label>
        <name>Amount_100</name>
    </approvalStep>
    <description>Approval process for Funds Adjustment Requests</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Funds_Adjustment_Request__c.Operations_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Funds_Adjustment_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Client Adjustment</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Finance_Pending_Client</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Operation_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Operation_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_for_Approval_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Operation_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FAR Client</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Operation_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_for_Approval_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
